<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rkarthikraj.loginapplication.HomeActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/inputPlace"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:textStyle="normal|bold"
        android:textAlignment="center" />

    <TextView
        android:text="Enter your Place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:id="@+id/textView6"
        android:textStyle="normal|bold"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:layout_below="@+id/logTV"
        android:layout_marginEnd="22dp" />

    <Button
        android:text="ADD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputPlace"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:id="@+id/insertBT"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:onClick="onClickInsert" />

    <TextView
        android:text="Welcome:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logTV"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_marginEnd="57dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/usernameTV" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usernameTV"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/inputPlace"
        android:layout_marginStart="37dp"
        android:textStyle="normal|bold" />

    <Button
        android:text="SIGNOUT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/insertBT"
        android:layout_alignEnd="@+id/insertBT"
        android:layout_marginTop="61dp"
        android:id="@+id/logoutBT"
        android:onClick="onClickLogout" />
</RelativeLayout>
