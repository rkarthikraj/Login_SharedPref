<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rkarthikraj.loginapplication.LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textAlignment="center" />

    <Button
        android:text="Sign In"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginBT"
        android:onClick="onClickLogin"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/pwd"
        android:layout_alignStart="@+id/pwd" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="26dp"
        android:id="@+id/pwd"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_below="@+id/uname"
        android:layout_alignStart="@+id/uname" />

    <TextView
        android:text="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/pwd"
        android:layout_alignBottom="@+id/pwd"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:id="@+id/textView2"
        android:textStyle="normal|bold"
        android:layout_marginStart="33dp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/uname"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="RESET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resetBT"
        android:textStyle="normal|bold"
        android:onClick="onClickReset"
        android:layout_below="@+id/loginBT"
        android:layout_alignStart="@+id/loginBT"
        android:layout_marginTop="30dp" />

    <TextView
        android:text="Visitor Page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/visitorTV"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:onClick="onClickVisitor"
        android:layout_alignBaseline="@+id/resetBT"
        android:layout_alignBottom="@+id/resetBT"
        android:layout_alignEnd="@+id/textView3"
        android:textColor="@android:color/holo_blue_bright" />

    <TextView
        android:text="Signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:onClick="onClickSignup"
        android:layout_alignBaseline="@+id/loginBT"
        android:layout_alignBottom="@+id/loginBT"
        android:layout_alignStart="@+id/textView3"
        android:textColor="@android:color/holo_orange_dark" />

</RelativeLayout>
